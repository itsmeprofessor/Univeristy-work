@{
    ViewData["Title"] = "All Users";
}
@model List<EFMV.Models.Entities.User>

<h1>All Users</h1>
<div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" method="post" class="d-inline">
                            <input type="submit" class="btn btn-info text-white" value="Edit" />
                        </form>
                        @* <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info text-white">Edit</a> *@
                        |
                        <form asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="User" asp-action="Create" class="btn btn-info text-white">Create</a>

</div>
